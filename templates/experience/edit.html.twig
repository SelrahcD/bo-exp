{% extends '@!EasyAdmin/default/edit.html.twig' %}

{% block body %}
    {{ parent() }}
    <form id="experience_publish" method="post" action="{{ path('experience_publish', {'id': entity.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('publish' ~ entity.id) }}">
    </form>

    <form id="experience_approve" method="post" action="{{ path('experience_approve', {'id': entity.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ entity.id) }}">
    </form>

    <form id="experience_ask_feedback" method="post" action="{{ path('experience_ask_feedback', {'id': entity.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('ask_feedback' ~ entity.id) }}">
    </form>

{% endblock %}
